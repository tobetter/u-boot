#set -x

. /usr/lib/u-boot/library.sh

case "$1" in
	install)
		echo "$1 install"
		;;
	configure)
		device=${BOOT_DEVICE}
		[ "x${device}" = "x" ] && device=$(find_root_device)
		[ "x${device}" = "x" ] || flash_binary ${device} odroidn2
		;;
	*)
		exit 0
		;;
esac

exit 0
