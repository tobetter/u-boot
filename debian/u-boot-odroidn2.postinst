set -x

[ -z ${binary_dir} ] && binary_dir="/usr/lib/u-boot/odroid-n2"

. ${binary_dir}/library.sh

device=$(find_root_device)

case ${device} in
	/dev/mmcblk0 | /dev/mmcblk1)
		download_binary
		if [ -e ${device} ]; then
			flash_binary ${device} ${UBOOT_BINARY}
		fi
		;;
	*)
		;;
esac
